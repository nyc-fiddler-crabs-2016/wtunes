<%= form_for @album do |f| %>
  <%= f.label :title %>:
  <%= f.text_field :title %><br>
  <br>
  add songs:
  <br>
  <% @album.songs.each do |song| %>
    <%= f.fields_for :songs, song do |song_form| %>
    <br>
      <%= song_form.label :name %>
      <%= song_form.text_field :name %> <br>

    <% end %>
  <% end %>
  <%= f.submit%>
<% end %>

