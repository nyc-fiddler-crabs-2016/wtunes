<div class="auth">
  <h2>Sign Up</h2>
  <br>
  <%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@user.errors.count, "error") %> </h4>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </div>
      <% end %>
      <br>
      username: <%= f.text_field :user_name %>
      Password: <%= f.password_field :password %>
    <%= f.submit "Submit" %>
  <% end %>
</div>