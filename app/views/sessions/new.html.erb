<h1>Login</h1>

<% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> </h2>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </div>
    <% end %>

  <%= form_tag sessions_path do %>
    username: <%= text_field_tag :user_name %>
    Password: <%= password_field_tag :password %>
    <%= submit_tag "Submit" %>
  <% end %>
